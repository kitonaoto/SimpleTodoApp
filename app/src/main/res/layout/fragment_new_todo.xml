<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.simpletodoapp.TodoViewModel"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/title_blue"
            app:popupTheme="@style/Theme.SimpleTodoApp.PopupOverlay"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editText"
            style="@style/EditText"
            app:theme="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/title_blue"
            android:hint="タイトル"
            android:inputType="text"
            android:textColorHint="@color/warm_pink"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="48dp"
            android:paddingBottom="55dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_send_24"
            app:backgroundTint="@color/warm_pink"
            app:layout_constraintBottom_toBottomOf="@id/editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/dateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:text="予定日"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="220dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="予定日"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:textColor="#aaaaaa"
            app:layout_constraintTop_toBottomOf="@+id/dateTitle"/>

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:text="カテゴリ"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dateContent" />

        <TextView
            android:id="@+id/categoryContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="カテゴリ"
            android:textColor="#aaaaaa"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/categoryTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
